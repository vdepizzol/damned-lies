<html>
<head>
  #if $team.has_key('description')
   <title>${team.description}</title>
  #else
   <title>${team.id}</title>
  #end if
  <link rel="stylesheet" href="${webroot}/data/main.css"/>
</head>
<body>

<center>
<div style="width:80%; text-align: left;">

#if $team.has_key('description')
<h1>${team.description}</h1>
#else
<h1>${team.id}</h1>
#end if

<table><tr><td valign="top" width="50%">
  <h2>Details</h2>

  #if $team.webpage and $team.has_key('description')
  <strong>${team.description} Page:</strong> <a href="$team.webpage">$team.webpage</a><br />
  #end if
  
  #if $team.userpage
  <strong>Users Web Page:</strong> <a href="$team.userpage">$team.userpage</a><br />
  #end if

  #if $team.bugzilla and $team.has_key('bugzilla-component')
  <br/><strong>Bugzilla:</strong>
  <ul>
    <li><a href="${team.bugzilla}enter_bug.cgi?product=$team['bugzilla-product']&component=$team['bugzilla-component']">Report Bug in Translation</a></li>
    <li><a href="${team.bugzilla}buglist.cgi?product=$team['bugzilla-product']&component=$team['bugzilla-component']">Show Existing Bugs</a></li>
  </ul>
  #end if
  

  #if $team.has_key('mailing-list')
  <br/><strong>Mailing List:</strong>
  <ul>
    <li><a href="mailto:${team['mailing-list']}">Send e-mail to the list</a></li>
    #if $team.has_key('mailing-list-subscribe')
    <li><a href="${team['mailing-list-subscribe']}">Subscribe</a></li>
    #end if
  </ul>
  #end if
  
  


</td><td valign="top">
#if $team.has_key('coordinator')
  <h2>Coordinator</h2>
  #if $team.coordinator.icon
  <div class="maintainer" style="background-image:url('$team.coordinator.icon');">
  #else
  <div class="maintainer">
  #end if
  <a style="font-size: 140%;" href="${webroot}/people/$team.coordinator.id">$team.coordinator.name</a><br />
  #if $team.coordinator.webpage
  <a href="$team.coordinator.webpage">$team.coordinator.webpage</a><br />
  #end if

  <br />
  #if len($team.coordinator.im) or $team.coordinator.nick
  <strong>Instant messaging:</strong>
  <ul>
  #if $team.coordinator.nick
    <li><em>$team.coordinator.nick</em> (IRC)</li>
  #end if
  #for type, account in $team.coordinator.im.items()
    <li><em>$account.content</em> ($type)</li>
  #end for
  </ul>
  #end if

  #if $team.coordinator.has_key('bugzilla-account')
  <strong>Bugzilla account:</strong> $team.coordinator['bugzilla-account']<br />
  #end if
  #if $team.coordinator.has_key('cvs-account')
  <strong>CVS account:</strong> <a href="http://cvs.gnome.org/bonsai/cvsquery.cgi?treeid=default&module=all&branch=HEAD&branchtype=match&dir=&file=&filetype=match&who=${team.coordinator['cvs-account']}&whotype=match&sortby=Date&hours=2&date=week&mindate=&maxdate=&cvsroot=%2Fcvs%2Fgnome">$team.coordinator['cvs-account']</a><br />
  #end if

  </div>
#end if
</td></tr></table>

#if len($team.language)
#for $lang, $ldata in $team.language.items()
<h2>$ldata.content</h2>

#set releases=$ldata.releases
#if len($releases)
<table class="stats">
<thead><tr><th>Release</th><th>Docs</th><th>Graph</th><th>UI</th><th>Graph</th></tr></thead>
#for release in $releases
<tr>
  <td class="left" style="font-size:120%;"><a href="${webroot}/languages/$lang/${release.id}">${release.description}</a>
  #if $release.has_key('po_error')
    <img src="$webroot/data/${release.po_error}.png" title="${release.po_error_message}">
  #end if
  </td>
  <td>${release.doc_supportedness}% ($release.doc_translated/$release.doc_fuzzy/$release.doc_untranslated)</td>
  <td style="width: 108px; text-align: center;"><div class="graph">
      <div class="translated" style="width: ${release.doc_percentages.translated}px;"></div>
      <div class="fuzzy" style="left:${release.doc_percentages.translated}px; width:${release.doc_percentages.fuzzy}px;"></div>
      #set upos=$release.doc_percentages.translated + $release.doc_percentages.fuzzy
      <div class="untranslated" style="left:${upos}px; width: ${release.doc_percentages.untranslated}px;"></div>
     </div>
   </td>
  <td>${release.ui_supportedness}% ($release.ui_translated/$release.ui_fuzzy/$release.ui_untranslated)</td>
  <td style="width: 108px; text-align: center;"><div class="graph">
      <div class="translated" style="width: ${release.ui_percentages.translated}px;"></div>
      <div class="fuzzy" style="left:${release.ui_percentages.translated}px; width:${release.ui_percentages.fuzzy}px;"></div>
      #set upos=$release.ui_percentages.translated + $release.ui_percentages.fuzzy
      <div class="untranslated" style="left:${upos}px; width: ${release.ui_percentages.untranslated}px;"></div>
     </div>
   </td>
</tr>
#end for
</table>
#end if

#end for
#end if

</div>
</center>
</body>
</html>
