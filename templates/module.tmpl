<html>
<head><title>$module.id stats</title>
  <link rel="stylesheet" href="${webroot}/data/main.css"/>
  <!--<link rel="stylesheet" href="css/unit.css"/>-->
  <!--<script src="js/xslt/misc.js" type="text/javascript"/>
  <script src="js/xslt/dom.js" type="text/javascript"/>
  <script src="js/xslt/xpath.js" type="text/javascript"/>
  <script src="js/xslt/xslt.js" type="text/javascript"/>
  <script src="js/db2html.js" type="text/javascript"/>-->
  <!--<script src="js/operations.js" type="text/javascript"/>
  <script src="js/designmode.js" type="text/javascript"/>-->
</head>
<body>

<center>
<div style="width:80%; text-align: left;">

<h1>$module.description</h1>
#if $module.has_key('webpage') and $module.webpage
<p><a href="$module.webpage">$module.webpage</a></p>
#end if
<table><tr><td width="50%" valign="top">
#if $module.has_key('maintainer') and len($module.maintainer)
<h2>Maintainers</h2>
#for mid, maintainer in $module.maintainer.items()
#if $maintainer.icon
<div class="maintainer" style="background-image:url('$maintainer.icon');">
#else
<div class="maintainer">
#end if
  $maintainer.name <a href="mailto:$maintainer.email">&lt;$maintainer.email&gt;</a>
  #if $maintainer.has_key('webpage')
  <br /><a href="$maintainer.webpage">$maintainer.webpage</a>
  #end if
</div>
#end for
#end if
</td><td width="50%" valign="top">
#if $module.has_key('bugs-baseurl')
<h2>Bug reporting</h2>
<p>Report bugs to 
<a href="$module['bugs-baseurl']/enter_bug.cgi?product=$module['bugs-product']&component=$module['bugs-component']">Bugzilla</a>.</p>
#end if
</td></tr></table>

#if len($module.branch)
#for branch, data in $module.branch.items()
<h2>$branch 
#if $module.has_key('svnweb')
(<a href="$module['svnweb']">Browse SVN</a>)</h2>
#else
(<a href="$data['cvs-web']">Browse CVS</a>)
#end if
</h2>
#if $data.has_key('stringfrozen') and $data.stringfrozen
<p>This branch is currently string-frozen.</p>
#end if

<table><tr><td valign="top"><!-- split to two columns -->

#if len($data.document)
#if len($data.document)>1
<h3>Documentation</h3>
#end if
#for docdir, document in $data.document.items()

#set global webdir=$webroot+"/POT/"+$module.id+"."+$branch+"/docs/"+$document.potbase+"."+$branch
#set global domain=$document
#set global uidir=$docdir
#set global branch=$branch
#include "templates/show-stats.tmpl"

#end for
#end if



</td><td valign="top"><!-- split to two columns -->


#if len($data.domain)
#if len($data.domain)>1
<h3>Translation</h3>
#end if
#for uidir, domain in $data.domain.items()

#set global webdir=$webroot+"/POT/"+$module.id+"."+$branch+"/"+$domain.potbase+"."+$branch
#set global domain=$domain
#set global uidir=$uidir
#set global branch=$branch
#include "templates/show-stats.tmpl"

#end for
#end if

</td></tr></table><!-- split to two columns -->


<!-- cycle through branhes -->
#end for
#end if

</div>
</center>
</body>
</html>
